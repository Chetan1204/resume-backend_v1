<div style="width: 100%; height: 100%;background-color: #f0f0f1;display: flex;align-items: center;justify-content: center;">
	<div style="border-bottom: 4px solid #315BC1; width: 40%; background-color: #fff;padding: 20px;margin-bottom: 10%;">
		<h3 style="text-align: center;">Create a new Post</h3>
		<form action="/manage/add-new-post-data" method="POST">
			<div style="padding: 20px 0;">
				<label class="pb-2" for="elementName">Post Name:</label>
				<input name="postName" style="width: 100%;display: block;padding: 5px;" class="form-control" type="text" id="elementName" required>
				<span class="mb-3" style="display: block;font-size: 14px;">This is the name of the Post and should be unique</span>
				
				<select class="form-select" aria-label="Default select example" name="modelName">
                    <% allModels.forEach(model => { %>
					<option  value="<%= model.modelName %>"><%= model.modelName %></option>
                    <% }) %>
				</select>
				<button class="mt-3" style="border: none;background-color: #315BC1;color: #fff;padding: 7px 16px;font-size: 15x;font-weight: 600;">Create Post</button>
			</div>
		</form>
	</div>
</div>