<div style="width: 100%; height: 100%;background-color: #f0f0f1;display: flex;align-items: center;justify-content: space-around;flex-direction: column;">
	<div style="width: 40%; background-color: #fff;padding: 20px;margin-bottom: -2%;border: 1px solid rgba(0, 0,0,0.15);">
		<h3 style="text-align: center;">Add a New Coupon</h3>
		<form action="/api/v1/manage/add-coupon" method="POST">
			<div style="padding: 20px 0;">
				<label class="pb-2" for="couponCode" name="couponCodeL">Coupon Code:</label>
				<input name="couponCode" style="width: 100%;display: block;padding: 5px;" class="form-control" type="text" id="couponCode"  required>

				<label class="pb-2" for="couponId" name="couponId">Coupon Id:</label>
				<input name="couponId" style="width: 100%;display: block;padding: 5px;" class="form-control" type="text" id="couponId" required>
				<button type="button" onclick="generateCouponId()" class="mb-3 button-secondary" style="margin-top: 5px;" >Auto-generate Unique Coupon Id</button>

                <label class="pb-2" style="display: block;" for="elementName" name="couponDiscount">Coupon Discount:</label>
				<input name="couponDiscount" style="width: 100%;display: block;padding: 5px;" class="form-control" type="number"  required>

                <label class="pb-2" for="elementName" name="couponDescription">Coupon Description:</label>
				<input name="couponDescription" style="width: 100%;display: block;padding: 5px;" id="couponDescription" class="form-control" type="text"  required>
                <button type="submit" class="mt-3 button-main button-main-md">Create Post</button>
			</div>
		</form>
	</div>
    <div style="width: 40%;padding: 20px;margin-bottom: 10%;background-color: #fff;">
        <div style="background-color: #D1FAE5; border-radius: 6px; padding: 10px; margin-top: 15px;">
            <h6 style="color: #10B981; font-weight: bold; letter-spacing: 2px; line-height: 20px; display: flex; align-items: center; margin-bottom: 10px; gap: 5px;">
                <i style="font-size: 22px; line-height: 20px;" class='bx bxs-award'></i> <span id="couponCodePlaceholder">TRYNEW20</span>
            </h6>
            <p style="color: #047857; font-size: 13px; line-height: 18px; margin-top: 5px; padding-left: 30px; padding-right: 30px;">Coupon Applied: <span id="couponDescriptionPlaceholder">Avail a 20% discount upto Rs 100 on this purchase.</span></p>
          <div style="text-align: right;">
                  <button  style="color: #e42b5c; font-weight: 600; border: none; background-color: transparent;" >Remove</button>
          </div>
       </div>
	</div>
</div>

<script>
    function generateCouponId() {
        
        const postTypeName = document.getElementById("couponCode").value;
        const slugElement = document.getElementById("couponId");
        if(!postTypeName) return slugElement.value ="";
        const dt = new Date();
        const mil = "__"+dt.getTime();
        const slug = "crp__"+postTypeName.toLowerCase()?.split(" ").join("")+mil;
        slugElement.value = slug;
    }

    // JavaScript state management for real-time updates
    document.getElementById('couponCode').addEventListener('input', function(event) {
        document.getElementById('couponCodePlaceholder').innerText = event.target.value;
    });

    document.getElementById('couponDescription').addEventListener('input', function(event) {
        document.getElementById('couponDescriptionPlaceholder').innerText = event.target.value;
    });
</script>